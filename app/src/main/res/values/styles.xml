<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="spinnerDropDownItemStyle">@style/customSpinnerStyle</item>
        <item name="android:font" tools:ignore="NewApi">@style/regular</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="lollipop">true</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="customSpinnerStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="NavigationView" parent="Base.Theme.AppCompat">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <!--<item name="android:layout_marginLeft">@dimen/_12sdp</item>-->
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/white</item>
        <item name="listPreferredItemPaddingLeft">@dimen/_40sdp</item>

    </style>



    <style name="ed_design">
        <!-- Customize your theme here. -->
        <item name="android:padding">@dimen/_8sdp</item>
        <item name="android:drawablePadding">@dimen/_8sdp</item>
        <item name="android:font" tools:ignore="NewApi">@style/regular</item>
        <item name="android:background">@drawable/round_edittext</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:layout_marginLeft">@dimen/_30sdp</item>
        <item name="android:layout_marginRight">@dimen/_30sdp</item>

    </style>


    <style name="edBlue_design">
        <!-- Customize your theme here. -->
        <item name="android:padding">@dimen/_8sdp</item>
        <item name="android:font" tools:ignore="NewApi">@style/regular</item>
        <item name="android:drawablePadding">@dimen/_8sdp</item>
        <item name="android:background">@drawable/blue_edittext</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:layout_marginLeft">@dimen/_30sdp</item>
        <item name="android:layout_marginRight">@dimen/_30sdp</item>

    </style>


    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/colorPrimary</item>
    </style>



    <style name="blue_btn_design">
        <item name="android:padding">@dimen/_8sdp</item>
        <item name="android:background">@drawable/blue_trasparent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:layout_marginLeft">@dimen/_30sdp</item>
        <item name="android:layout_marginRight">@dimen/_30sdp</item>
    </style>

    <style name="blue_btn_design2">
        <item name="android:padding">@dimen/_4sdp</item>
        <item name="android:background">@drawable/blue_trasparent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:layout_marginLeft">@dimen/_10sdp</item>
        <item name="android:layout_marginRight">@dimen/_10sdp</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/app_splash_theme</item>
    </style>


    <style name="customOverflowStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/colorAccent</item>
    </style>


    <style name="customSpinnerStyleSelected" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <dimen name="design_bottom_navigation_text_size" tools:override="true">12sp</dimen>
    <dimen name="design_bottom_navigation_active_text_size" tools:override="true">12sp</dimen>

    <style name="white_btn_design">
        <item name="android:padding">@dimen/_8sdp</item>
        <item name="android:background">@drawable/white_round_btn</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:layout_marginLeft">@dimen/_30sdp</item>
        <item name="android:layout_marginRight">@dimen/_30sdp</item>
    </style>


    <style name="txt_design">
        <item name="android:padding">@dimen/_6sdp</item>
        <item name="android:layout_marginLeft">@dimen/_30sdp</item>
        <item name="android:layout_marginRight">@dimen/_30sdp</item>
        <item name="android:drawablePadding">@dimen/_8sdp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>


    <string-array name="size_array">
        <item>Size</item>
        <item>26</item>
        <item>28</item>
        <item>30</item>

    </string-array>



    <string-array name="no_items">
        <item>Qnty</item>
        <item>1</item>
        <item>2</item>
        <item>3</item>

    </string-array>



    <style name="regular">
        <item name="android:fontFamily" tools:ignore="NewApi">@font/gravitiy_regular</item>
    </style>

    <style name="bold">
        <item name="android:fontFamily" tools:ignore="NewApi">@font/gravity_bold</item>
    </style>

    <style name="italic">
        <item name="android:fontFamily" tools:ignore="NewApi">@font/gravity_italic</item>
    </style>

    <style name="light">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/gravity_light</item>
    </style>


    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom</item>
    </style>

    <style name="payment_info_design">
        <!-- Customize your theme here. -->
        <item name="android:padding">@dimen/_8sdp</item>
        <item name="android:drawablePadding">@dimen/_8sdp</item>
        <item name="android:font" tools:ignore="NewApi">@style/regular</item>
        <item name="android:background">@drawable/round_edittext</item>
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
        <item name="android:layout_marginLeft">@dimen/_10sdp</item>
        <item name="android:layout_marginRight">@dimen/_10sdp</item>

    </style>
</resources>
