<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_4sdp"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/li_root_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/coloCreamyWhite"
            android:orientation="horizontal"
            android:padding="@dimen/_8sdp">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#eceff1">

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:scaleType="centerCrop" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp">

                <TextView
                    android:id="@+id/tb_item_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="top|left"
                    android:text="Brand name"
                    style="@style/bold"
                    android:padding="@dimen/_2sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/tb_item_name_varient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:padding="@dimen/_2sdp"
                    android:gravity="top|left"
                    android:text="Item name"
                    style="@style/regular"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/_12sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="2"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView
                        android:id="@+id/Spn_size"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:padding="@dimen/_2sdp"
                        android:text="Size"
                        android:editable="false"
                        android:background="@null"
                        android:textColor="@color/black"
                        android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
                        android:layout_height="wrap_content">

                    </AutoCompleteTextView>


                    <AutoCompleteTextView
                        android:id="@+id/Spn_qty"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:padding="@dimen/_2sdp"
                        android:text="Qnty"
                        android:background="@null"
                        android:editable="false"
                        android:textColor="@color/black"
                        android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
                        android:layout_height="wrap_content">

                    </AutoCompleteTextView>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:padding="@dimen/_2sdp"
                    android:gravity="top|left"
                    android:text="$78"
                    style="@style/regular"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:background="@color/grey"
            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_gravity="center_vertical"
            android:layout_height="1dp">

        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/tv_move_to_wish_list"
                android:layout_width="match_parent"
                android:text="Move To Whislist"
                android:padding="@dimen/_6sdp"
                android:gravity="center"
                style="@style/regular"
                android:textColor="@color/colorRed"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textSize="@dimen/_12sdp"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_height="@dimen/_26sdp" />

            <View
                android:layout_width="1dp"
                android:background="@color/grey"
                android:layout_marginLeft="@dimen/_4sdp"
                android:layout_gravity="center_vertical"
                android:layout_height="@dimen/_14sdp">

            </View>

            <TextView
                android:id="@+id/tv_remove"
                android:layout_width="match_parent"
                android:text="Remove"
                android:textAllCaps="false"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_weight="1"
                style="@style/regular"
                android:gravity="center"
                android:textSize="@dimen/_12sdp"
                android:padding="@dimen/_6sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textColor="@color/colorRed"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_height="@dimen/_26sdp" />



        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>