<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    android:layout_height="match_parent">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_marginBottom="@dimen/_50sdp"
       android:layout_height="wrap_content">

       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="vertical"
           android:layout_height="match_parent">

           <TextView
               android:layout_width="match_parent"
               android:text="Contact Details"
               android:padding="@dimen/_10sdp"
               style="@style/regular"
               android:background="@color/coloCreamyWhite"
               android:textColor="@color/textColor"
               android:textSize="@dimen/_14sdp"
               android:layout_height="wrap_content" />

           <EditText
               android:layout_width="match_parent"
               android:hint="Name *"

               android:layout_marginLeft="@dimen/_20sdp"
               android:layout_marginRight="@dimen/_20sdp"
               android:layout_marginTop="@dimen/_10sdp"
               android:background="@drawable/round_edittext"
               android:inputType="textPersonName"
               android:textSize="@dimen/_12sdp"
               android:padding="@dimen/_8sdp"
               style="@style/regular"
               android:layout_height="wrap_content" />

           <EditText
               android:layout_width="match_parent"
               android:hint="Mobile No *"
               android:layout_marginLeft="@dimen/_20sdp"
               android:layout_marginRight="@dimen/_20sdp"
               android:layout_marginTop="@dimen/_10sdp"
               android:background="@drawable/round_edittext"
               android:inputType="number"
               android:textSize="@dimen/_12sdp"
               android:padding="@dimen/_8sdp"
               style="@style/regular"
               android:layout_height="wrap_content" />


           <TextView
               android:layout_width="match_parent"
               android:text="Address Details"
               android:layout_marginTop="@dimen/_10sdp"
               android:padding="@dimen/_10sdp"
               android:background="@color/coloCreamyWhite"
               android:textColor="@color/textColor"
               android:textSize="@dimen/_14sdp"
               style="@style/regular"
               android:layout_height="wrap_content" />





           <EditText
               android:layout_width="match_parent"
               android:hint="City *"
               android:layout_marginLeft="@dimen/_20sdp"
               android:layout_marginRight="@dimen/_20sdp"
               android:layout_marginTop="@dimen/_10sdp"
               android:background="@drawable/round_edittext"
               android:inputType="number"
               style="@style/regular"
               android:textSize="@dimen/_12sdp"
               android:padding="@dimen/_8sdp"
               android:layout_height="wrap_content" />

           <EditText
               android:layout_width="match_parent"
               android:hint="State *"
               android:layout_marginLeft="@dimen/_20sdp"
               android:layout_marginRight="@dimen/_20sdp"
               android:layout_marginTop="@dimen/_10sdp"
               android:background="@drawable/round_edittext"
               android:inputType="number"
               android:textSize="@dimen/_12sdp"
               style="@style/regular"
               android:padding="@dimen/_8sdp"
               android:layout_height="wrap_content" />

           <EditText
               android:layout_width="match_parent"
               android:hint="Pin code *"
               android:layout_marginLeft="@dimen/_20sdp"
               android:layout_marginRight="@dimen/_20sdp"
               android:layout_marginTop="@dimen/_10sdp"
               android:background="@drawable/round_edittext"
               android:inputType="number"
               android:textSize="@dimen/_12sdp"
               style="@style/regular"
               android:padding="@dimen/_8sdp"
               android:layout_height="wrap_content" />


           <EditText
               android:layout_width="match_parent"
               android:hint="Address(House No , Building ,Street)*"
               android:layout_marginLeft="@dimen/_20sdp"
               android:layout_marginRight="@dimen/_20sdp"
               android:layout_marginTop="@dimen/_10sdp"
               android:background="@drawable/round_edittext"
               android:inputType="textPersonName"
               android:textSize="@dimen/_12sdp"
               style="@style/regular"
               android:padding="@dimen/_8sdp"
               android:layout_height="wrap_content" />


           <EditText
               android:layout_width="match_parent"
               android:hint="Locality / Town *"
               android:layout_marginLeft="@dimen/_20sdp"
               android:layout_marginRight="@dimen/_20sdp"
               android:layout_marginTop="@dimen/_10sdp"
               android:background="@drawable/round_edittext"
               android:inputType="textPersonName"
               android:textSize="@dimen/_12sdp"
               style="@style/regular"
               android:padding="@dimen/_8sdp"
               android:layout_height="wrap_content" />


           <EditText
               android:layout_width="match_parent"
               android:hint="Landmark *"
               android:layout_marginLeft="@dimen/_20sdp"
               android:layout_marginRight="@dimen/_20sdp"
               android:layout_marginTop="@dimen/_10sdp"
               android:background="@drawable/round_edittext"
               android:inputType="textPersonName"
               android:textSize="@dimen/_12sdp"
               android:padding="@dimen/_8sdp"
               style="@style/regular"
               android:layout_height="wrap_content" />




           <TextView
               android:layout_width="match_parent"
               android:text="Type Of Address"
               android:layout_marginTop="@dimen/_10sdp"
               android:padding="@dimen/_10sdp"
               android:background="@color/coloCreamyWhite"
               android:textColor="@color/textColor"
               android:textSize="@dimen/_14sdp"
               style="@style/regular"
               android:layout_height="wrap_content" />



           <RadioGroup
               android:layout_marginTop="@dimen/_10sdp"
               android:layout_width="match_parent"
               android:orientation="horizontal"

               android:layout_marginLeft="@dimen/_20sdp"
               android:layout_marginRight="@dimen/_20sdp"
               android:layout_height="wrap_content">

               <RadioButton
                   android:layout_width="wrap_content"
                   android:text="Home"
                   android:layout_weight="1"
                   style="@style/regular"
                   android:textSize="@dimen/_10sdp"
                   android:buttonTint="@color/lightblue"
                   android:layout_height="wrap_content" />


               <RadioButton
                   android:layout_width="wrap_content"
                   android:text="Work"
                   style="@style/regular"
                   android:layout_weight="1"
                   android:textSize="@dimen/_10sdp"
                   android:buttonTint="@color/lightblue"
                   android:layout_height="wrap_content" />
           </RadioGroup>





       </LinearLayout>
   </ScrollView>

    <Button
        android:id="@+id/btnAddAddress"
        android:layout_width="match_parent"
        android:text="Add Address"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:layout_marginBottom="@dimen/_10sdp"
        style="@style/regular"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:textAllCaps="false"
        android:background="@drawable/blue_trasparent"
        android:layout_height="@dimen/_34sdp" />




</RelativeLayout>