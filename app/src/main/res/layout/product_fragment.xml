<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/product_detail_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/_40sdp"
        android:layout_height="match_parent"
        android:background="#fafafa"
        tools:context=".golf_plus">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_160sdp">

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/viewPager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        android:visibility="visible"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/gradient_color1" />

                    <me.relex.circleindicator.CircleIndicator
                        android:id="@+id/indicator"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:visibility="visible"
                        android:layout_alignParentBottom="true"
                        app:ci_drawable="@drawable/round_white"
                        app:ci_drawable_unselected="@drawable/round_blue"
                        app:ci_height="@dimen/_7sdp"
                        app:ci_margin="@dimen/_5sdp"
                        app:ci_width="@dimen/_7sdp" />


                    <ImageView
                        android:layout_width="@dimen/_24sdp"
                        android:src="@drawable/heart"
                        android:padding="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_alignParentRight="true"
                        android:tint="@color/colorRed"
                        android:layout_height="@dimen/_24sdp" />


                </RelativeLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_6sdp"
                android:layout_marginRight="@dimen/_6sdp"
                android:orientation="vertical">


                <LinearLayout
                     android:layout_width="match_parent"
                     android:orientation="vertical"
                     android:layout_height="wrap_content">


                     <TextView
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:paddingBottom="@dimen/_2sdp"
                         android:paddingLeft="@dimen/_4sdp"
                         android:text="Product name"
                         style="@style/regular"
                         android:textStyle="bold"
                         android:paddingTop="@dimen/_4sdp"
                         android:textColor="@color/black"
                         android:textSize="@dimen/_12sdp" />


                     <TextView
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:paddingBottom="@dimen/_2sdp"
                         android:paddingLeft="@dimen/_4sdp"
                         android:paddingTop="@dimen/_2sdp"
                         style="@style/regular"
                         android:text="Lorem is simply dummy text of the printing and typesetting industry"
                         android:textColor="@color/textColor"
                         android:textSize="@dimen/_10sdp" />

                     <TextView
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:paddingBottom="@dimen/_4sdp"
                         android:paddingLeft="@dimen/_4sdp"
                         style="@style/regular"
                         android:paddingTop="@dimen/_2sdp"
                         android:text="$ 535"
                         android:textColor="@color/colorRed"
                         android:textSize="@dimen/_12sdp" />

                 </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_4sdp"
                            android:text="Product Details"
                            android:textStyle="bold"
                            style="@style/regular"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:paddingBottom="@dimen/_2sdp"
                                android:paddingLeft="@dimen/_4sdp"
                                android:paddingTop="@dimen/_2sdp"
                                android:text="Type"
                                style="@style/regular"
                                android:layout_weight="1"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_10sdp" />


                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:paddingBottom="@dimen/_2sdp"
                                style="@style/regular"
                                android:paddingLeft="@dimen/_4sdp"
                                android:paddingTop="@dimen/_2sdp"
                                android:text="Flared"
                                android:layout_weight="1"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_10sdp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_4sdp"
                            style="@style/regular"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:paddingBottom="@dimen/_2sdp"
                                android:paddingLeft="@dimen/_4sdp"
                                android:paddingTop="@dimen/_2sdp"
                                android:text="Fabric"
                                style="@style/regular"
                                android:layout_weight="1"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_10sdp" />


                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:paddingBottom="@dimen/_2sdp"
                                android:paddingLeft="@dimen/_4sdp"
                                android:paddingTop="@dimen/_2sdp"
                                android:text="Cotton"
                                style="@style/regular"
                                android:layout_weight="1"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_10sdp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:paddingBottom="@dimen/_4sdp"
                                android:paddingLeft="@dimen/_4sdp"
                                android:paddingTop="@dimen/_2sdp"
                                android:text="Color"
                                style="@style/regular"
                                android:layout_weight="1"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_10sdp" />


                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:paddingBottom="@dimen/_4sdp"
                                android:paddingLeft="@dimen/_4sdp"
                                android:paddingTop="@dimen/_2sdp"
                                android:text="Green"
                                style="@style/regular"
                                android:layout_weight="1"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_10sdp" />
                        </LinearLayout>


                    </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/_2sdp"
                    android:paddingLeft="@dimen/_4sdp"
                    style="@style/regular"
                    android:text="Rating &amp; Reviews"
                    android:textStyle="bold"
                    android:paddingTop="@dimen/_4sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerRateReview"
                    android:layout_width="match_parent"
                    android:nestedScrollingEnabled="false"
                    android:layout_height="wrap_content">

                </androidx.recyclerview.widget.RecyclerView>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/_2sdp"
                    android:paddingLeft="@dimen/_4sdp"
                    android:text="Peolpe also view"
                    android:textStyle="bold"
                    style="@style/regular"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:paddingTop="@dimen/_4sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerSimilarProdcut"
                    android:layout_width="match_parent"
                    android:nestedScrollingEnabled="false"
                    android:layout_height="wrap_content">

                </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/_4sdp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnAddCart"
            android:layout_width="@dimen/_130sdp"
            android:text="Add to Cart"
            android:textSize="@dimen/_12sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            style="@style/regular"
            android:background="@drawable/blue_trasparent"
            android:layout_height="@dimen/_32sdp" />


        <Button
            android:id="@+id/btnBuyNow"
            android:layout_width="@dimen/_130sdp"
            android:text="Buy Now"
            android:textSize="@dimen/_12sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            style="@style/regular"
            android:background="@drawable/blue_trasparent"
            android:layout_height="@dimen/_30sdp"  />

    </LinearLayout>





</RelativeLayout>